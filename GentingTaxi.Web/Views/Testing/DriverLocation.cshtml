@model GentingTaxi.Models.Driver
@{
    ViewBag.Title = "Driver Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { @ViewBag.Title }
@section ContentHeader{

}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
            </div><!-- /.box-header -->
            <div class="box-body">

                <div class="form-group">
                    @Html.LabelFor(m => m.DriverId)
                    <div>
                        @Model.DriverId
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    <div>
                        @Model.Name
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.IDCardNo)
                    <div>
                        @Model.IDCardNo
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentLocation.Latitude)
                    <div>
                        @Model.CurrentLocation.Latitude
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentLocation.Longitude)
                    <div>
                        @Model.CurrentLocation.Longitude
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div><!-- /.row -->