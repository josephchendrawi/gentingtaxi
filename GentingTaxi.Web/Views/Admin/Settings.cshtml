@model GentingTaxi.Models.AdminSettingView

@{
    ViewBag.Title = "AdminSetting";
}

<div class="row">
    @using (Html.BeginForm("Settings", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <!-- left column -->
        <div class="col-md-6">
            <!-- Personal Info -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Admin Setting</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.searchdriverbuffer_sec)
                        @Html.TextBoxFor(m => m.searchdriverbuffer_sec, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.driveravailabilityrange_min)
                        @Html.TextBoxFor(m => m.driveravailabilityrange_min, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.location_range_miles)
                        @Html.TextBoxFor(m => m.location_range_miles, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.current_driver_android_app_version)
                        @Html.TextBoxFor(m => m.current_driver_android_app_version, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.current_user_android_app_version)
                        @Html.TextBoxFor(m => m.current_user_android_app_version, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.current_user_ios_app_version)
                        @Html.TextBoxFor(m => m.current_user_ios_app_version, new { @class = "form-control" })
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer text-right">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div><!-- /.box -->

        </div><!--/.col (left) -->
    }
</div><!-- /.row -->