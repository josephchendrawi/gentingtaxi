@model GentingTaxi.Models.Admin
@{
    ViewBag.Title = "Admin List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { @ViewBag.Title }
@section Styles {
    <!-- DATA TABLES -->
    <link href="@Url.Content("~/Content/plugins/datatables/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
}
@section ContentHeader{
    <a href="@Url.Action("Add","Admin")" class="btn btn-primary inline"><i class="fa fa-plus-circle"></i> Add</a>
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->

            <div class="box-body">
                <table id="tbl-list" class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@Html.LabelFor(m => m.Name)</th>
                            <th>@Html.LabelFor(m => m.Username)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->

@section Scripts {
    <!-- DATA TABES SCRIPT -->
    <script src="@Url.Content("~/Content/plugins/datatables/jquery.dataTables.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/datatables/dataTables.bootstrap.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            loadListTable();

            $("#tbl-list").on("click", "[name='editBtn[]']", function () {
                var tr = $(this).closest("tr");
                var Id = tr.find("[name='Id[]']").val();

                window.location.href = "@Url.Action("Edit", "Admin")/" + Id;
            })
        });

        function loadListTable() {
            var oTable = $("#tbl-list").DataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("ListAdmin", "Admin")",
                "bProcessing": true,
                "iDisplayLength": 10,
                "bStateSave": true,
                "fnStateSave": function (oSettings, oData) {
                    localStorage.setItem( 'DataTablesAdmin', JSON.stringify(oData) );
                },
                "fnStateLoad": function (oSettings) {
                    return JSON.parse(localStorage.getItem('DataTablesAdmin'));
                },
                "aoColumns": [
                        {
                            "mData": "AdminId",
                            "sName": "AdminId",
                            "bSearchable": false,
                            "bSortable": false,
                            "fnRender": function (Obj) {
                                return "<input type='hidden' value='" + Obj.aData['AdminId'] + "' name='Id[]' />";
                            }
                        },
                        { "mData": "Name" },
                        { "mData": "Username" },
                        {
                            "mData": null,
                            "bSortable": false,
                            "mRender": function (data, type, full) {
                                return '<a class="btn btn-sm btn-default" name="editBtn[]">' +
                                    '<i class="fa fa-edit"></i> Edit</a>';
                            }
                        },
                ]
            });

            //add class to jquery.datatables filter
            $('.dataTables_length select').addClass("btn btn-default");
            $('.dataTables_filter input').addClass("form-control");
        }
    </script>
}