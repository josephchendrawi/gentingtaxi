
@{
    ViewBag.Title = "Testing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { @ViewBag.Title }
@section Styles {

}
@section ContentHeader{
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->

            <div class="box-body">
                <div>
                    <label>Search Latest Location</label>
                    <label>Get Driver Bookings</label>
                    <div>
                        <input type="text" class="form-control inline w200" id="txtDriverIC" placeholder="Driver IC" />
                        <button class="btn btn-primary" onclick="goToURL('@Url.Action("DriverLocation", "Testing")?DriverIC='+$('#txtDriverIC').val());">Submit</button>
                    </div>
                </div>

                <div class="line-light"></div>
                
                <div>
                    <label>Get Driver Bookings</label>
                    <div>
                        <input type="text" class="form-control inline w200" id="txtBookingID" placeholder="Booking ID" />
                        <button class="btn btn-primary" onclick="goToURL('@Url.Action("DriverBookings", "Testing")?BookingId=' + $('#txtBookingID').val());">Submit</button>
                    </div>
                </div>

            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->

<script type="text/javascript">
    function goToURL(url) {
        location.href = url;
    }
</script>