@model GentingTaxi.Models.Hotspot
@{
    ViewBag.Title = "Recommended Location List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { List }
@section Styles {
    <!-- DATA TABLES -->
    <link href="@Url.Content("~/Content/plugins/datatables/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
}
@section ContentHeader{
    <a href="@Url.Action("Add","RecommendedLocation")" class="btn btn-primary inline"><i class="fa fa-plus-circle"></i> Add</a>
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->

            <div class="box-body">
                <table id="tbl-list" class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@Html.LabelFor(m => m.Name)</th>
                            <th>@Html.LabelFor(m => m.Latitude)</th>
                            <th>@Html.LabelFor(m => m.Longitude)</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->

@section Scripts {
    <!-- DATA TABES SCRIPT -->
    <script src="@Url.Content("~/Content/plugins/datatables/jquery.dataTables.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/plugins/datatables/dataTables.bootstrap.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            loadListTable();
        });

        function loadListTable() {
            var oTable = $("#tbl-list").DataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("ListHotspot", "RecommendedLocation")",
                "bProcessing": true,
                "iDisplayLength": 10,
                "bStateSave": true,
                "fnStateSave": function (oSettings, oData) {
                    localStorage.setItem( 'DataTablesHotspot', JSON.stringify(oData) );
                },
                "fnStateLoad": function (oSettings) {
                    return JSON.parse(localStorage.getItem('DataTablesHotspot'));
                },
                "aoColumns": [
                        {
                            "mData": "HotspotId",
                            "sName": "HotspotId",
                            "bSearchable": false,
                            "bSortable": false,
                            "fnRender": function (Obj) {
                                return "<input type='hidden' value='" + Obj.aData['HotspotId'] + "' name='Id[]' />";
                            }
                        },
                        { "mData": "Name" },
                        { "mData": "Latitude" },
                        { "mData": "Longitude" },
                ]
            });

            //add class to jquery.datatables filter
            $('.dataTables_length select').addClass("btn btn-default");
            $('.dataTables_filter input').addClass("form-control");
        }
    </script>
}